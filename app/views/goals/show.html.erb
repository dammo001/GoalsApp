
<ul>
  <% @goal.attributes.each do |attribute, value|  %>
    <li> <%= attribute %> : <%= value %> </li>
  <% end %>
</ul>

<%= render "comments/form", commentable: @goal %>

<% @goal.comments.each do |comment| %>
  <p><%= comment.body %></p>
<% end %>
<br>

<% if current_user == @goal.user %>
  <%= button_to "Delete Goal", goal_url(@goal), method: :delete %>
  <br>
  <%= link_to "Edit Goal", edit_goal_url(@goal) %>
<% end %>
<br>
<%= link_to "Back to goals", goals_url %>
